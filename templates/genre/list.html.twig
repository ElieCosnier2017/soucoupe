{% extends 'layout.html.twig' %}
 {% block title %} List of Genres {% endblock %}

{% block main %}

    <div class="row">
        {% for genre in genres %}
            <div class="col-md-3">
                <a href="{{ path("media", {id : genre.id}) }}">
                <div class="card mb-4" id="{{ genre.id }}">

                        <div class="carre">
                            <p>{{ genre.name }}</p>
                        </div>

                </div>
                </a>
                <script>
                    var randomColor = ['#f44336','#8e24aa','#3949ab','#2196f3','#00bcd4','#009688','#8bc34a','#cddc39',
                        '#ffc107','#ff9800','#ff5722','#9e9e9e','#607d8b','#d81b60','#69f0ae'];
                    document.getElementById({{ genre.id }}).style="background-color: " + randomColor[{{ loop.index0 }}];
                </script>
            </div>
        {% endfor %}
    </div>
{% endblock %}