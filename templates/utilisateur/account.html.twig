{% extends 'layout.html.twig' %}

{% block title %} Music Player - Account {% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-7 mx-auto">
            <div class="card card-signin my-1">
                <div class="card-header">
                    <h3 class="card-title text-center" >Edit Account</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <hr class="my-4">
                    <button class="btn btn-lg btn-outline-success btn-block" type="submit">Valid</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
